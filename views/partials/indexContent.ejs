<h2>All Blog Posts</h2>
<a class="btn" href="/new">+ Create New Post</a>

<ul class="post-list">
  <% if (posts.length === 0) { %>
    <li>No posts yet. Start by creating one!</li>
  <% } %>
  <% posts.forEach(post => { %>
    <li class="post">
      <h3><%= post.title %></h3>
      <p><%= post.content %></p>
      <a href="/posts/<%= post.id %>/edit">Edit</a>
      <form action="/posts/<%= post.id %>?_method=DELETE" method="POST">
        <button type="submit">🗑️ Delete</button>
      </form>
    </li>
  <% }) %>
</ul>
